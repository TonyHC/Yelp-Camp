<% layout('layouts/boilerplate') %>
<div class="row">
    <h3 class="text-center">Upload Images for <%= campground.title %></h3>
    <div class="col-6 offset-3">
        <form class="validated-form mt-3" action="/campgrounds/<%= campground._id %>?_method=PATCH" method="POST" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Upload Images</label>
                <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
                <div class="valid-feedback">
                    Looks good
                </div>
                <div class="invalid-feedback">
                    Please provide campground image(s) [Only accept jpeg, jpeg, png]
                </div>
            </div>
        
            <button class="btn btn-primary mt-3" type="submit">Upload Images</button>
        </form>
        
        <br>
        
        <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
    </div>
</div>