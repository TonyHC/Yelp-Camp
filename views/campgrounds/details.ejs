<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6">
        <div class="card">
            <img src="<%= campground.image %>" alt="outdoor-campground">

            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>

            <div class="card-body">
                <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>

            <div class="card-footer text-muted">
                <a href="/campgrounds">Campgrounds</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h2>Leave a review</h2>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="validated-form mb-3" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5">
            </div>
            <div class="mb-3">
                <label class="form-label" for="review">Review</label>
                <textarea class="form-control" name="review[content]" id="review" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good
                </div>
                <div class="invalid-feedback">
                    Please provide a campground review
                </div>
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        
        <h2>Reviews</h2>
        <% for (let review of campground.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <p class="card-text">Review: <%= review.content %></p>
                    
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete Review</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>
</div>